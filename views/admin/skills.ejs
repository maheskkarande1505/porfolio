<%- include("navbar.ejs") %>


<form action="save_skills" method="post" enctype="multipart/form-data">
    <div class="container bg-dark text-white mt-5">
        <h1>Add New Skill</h1>
        <div class="row">
            <div class="col-md-5 mb-4">
                Skill Image
                <input type="file" class="form-control" name="skill_image">
            </div>
            <div class="col-md-5 mb-4">
                Enter Skill Title
                <input type="text" class="form-control" name="skill_title" required>
            </div>
            <div class="col-md-2 mb-4 mt-4">
                <button class="btn btn-primary">Save Skill</button>
            </div>
        </div>
    </div>
</form>

<div class="container bg-dark text-white mt-5">
    <h1>Skill List</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-dark">
                <tr>
                    <th>Action</th>
                    <th>Sr. NO</th>
                    <th>Skill Image</th>
                    <th>University</th>
                </tr>

                <% skills.map((row, i)=>{ %>
                    <tr>
                        
                        <td>
                            <a href="/admin/edit_skill/<%-row.skill_id%>" ><button class="btn btn-sm btn-success"> <i class="fa fa-pencil"></i> </button></a>
                            <a href="/admin/delete_skill/<%-row.skill_id%>" onclick="return confirm('Are you Sure')"><button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </button></a>
                        </td>
                        
                        <td><%-i+1 %></td>
                        <td>
                            <img src="/<%-row.skill_image %>" width="50px" height="50px">
                        </td>
                        <td><%-row.skill_title %></td>
                    </tr>

                <% }) %>
            </table>
        </div>
    </div>
</div>
